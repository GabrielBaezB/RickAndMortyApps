<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar android:minHeight="?attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:popupTheme="@style/Theme.AppCompat.Light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/ancho_imagen_toolbar"
            android:layout_height="@dimen/ancho_imagen_toolbar"/>
        <TextView
            android:id="@+id/titulo_toolbar_txt"
            android:layout_gravity="center"
            android:text="@string/titulo_app"
            android:textColor="@color/white"
            android:textSize="@dimen/tamanio_titulo_app"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_left_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>